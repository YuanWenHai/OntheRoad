<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="150dp">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="注册"
           android:id="@+id/textView"
           android:gravity="center"
           android:textStyle="italic"
           android:layout_centerInParent="true"
           android:textSize="25sp"/>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号"
        android:paddingLeft="15dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_page_edit_account"
        android:hint="字母、数字等，用户名是唯一通行证"
        android:singleLine="true"
        android:maxLength="18"
        android:paddingLeft="15dp"
        android:textColor="#333333"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_page_edit_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLength="18"
        android:hint="不少于6位"
        android:paddingStart="15dp"
        android:textColor="#333333"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_page_edit_email"
        android:singleLine="true"
        android:hint="找回密码的凭据"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:textColor="#333333"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="确认注册"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/login_button_selector"
        android:id="@+id/register_page_commit_button"/>


</LinearLayout>