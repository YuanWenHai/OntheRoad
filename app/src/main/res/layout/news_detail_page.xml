<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/news_detail_toolbar"
        layout="@layout/fragment_toolbar"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:id="@+id/news_detail_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Title"
              android:layout_margin="10dp"
              android:gravity="center_horizontal"
              android:textSize="24sp"
              android:textColor="@color/dark_black"
              android:layout_marginTop="10dp" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">
              <TextView
                  android:id="@+id/news_detail_source"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="source"
                  android:textSize="15sp"
                  android:textColor="@color/grey_black"
                  />
              <TextView
                  android:id="@+id/news_detail_time"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="04-15 01:54"
                  />
          </LinearLayout>
          <ImageView
              android:id="@+id/news_detail_image"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:adjustViewBounds="true"
              android:layout_margin="10dp"
              tools:src="@drawable/bg3"/>
          <TextView
              android:id="@+id/news_detail_content"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:textColor="@color/middle_dark_black"
              tools:text="Some Contents" />
      </LinearLayout>
   </ScrollView>

</LinearLayout>