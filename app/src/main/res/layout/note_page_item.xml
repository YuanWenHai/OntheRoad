<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/note_page_item_image"
            android:visibility="gone"
            android:src="@drawable/splash"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some test word."
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_margin="5dp"
            android:id="@+id/note_page_item_content"
            android:layout_below="@+id/note_page_item_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="20160331"
            android:layout_below="@+id/note_page_item_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:id="@+id/note_page_item_time"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_page_item_content"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_action_ic_edit_black_24dp"
                android:text="编辑"
                android:drawablePadding="0dp"
                android:id="@+id/edit"
                android:gravity="center"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:drawablePadding="0dp"
                android:layout_toEndOf="@+id/edit"
                android:layout_marginStart="10dp"
                android:id="@+id/delete"
                android:textSize="14sp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_action_ic_delete_black_24dp"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>