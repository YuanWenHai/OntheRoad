<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_Detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/photo_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#00000000"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/photo_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_black"/>
    <RelativeLayout
        android:id="@+id/photo_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#5f000000"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/photo_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/photo_detail_count"
            android:textColor="@color/light_white"/>
        <TextView
            android:id="@+id/photo_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/grey_white"/>
        <TextView
            android:id="@+id/photo_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_detail_title"
            tools:text="Some description"
            android:textSize="14sp"
            android:textColor="@color/grey_white"/>
    </RelativeLayout>


</RelativeLayout>