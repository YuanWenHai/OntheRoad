<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="240dp"
       android:orientation="vertical"
       android:id="@+id/profile_user_information"
       android:layout_alignParentEnd="true"
       android:layout_alignParentStart="true"
       android:background="@drawable/profile_bg"
       android:clickable="true">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/anonymous"
           android:layout_marginStart="33dp"
           android:id="@+id/profile_page_image"
           android:layout_centerVertical="true" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="用户名"
           android:textColor="#eeeeee"
           android:id="@+id/profile_page_name"
           android:gravity="center"
           android:textSize="18sp"
           android:layout_below="@+id/profile_page_image"
           android:layout_alignEnd="@+id/profile_page_image"
           android:layout_alignStart="@+id/profile_page_image"
           android:layout_marginTop="15dp"/>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_below="@+id/profile_user_information">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实验室"
            android:textSize="16sp"
            android:textColor="#111111"
            android:drawableStart="@drawable/ic_dashboard_black_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="30dp"
            android:id="@+id/profile_page_laboratory"
            android:layout_marginTop="30dp"
            android:paddingStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/profile_item_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="修改密码"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/ic_change_history_black_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="30dp"
            android:textColor="#111111"
            android:layout_marginTop="15dp"
            android:id="@+id/profile_page_change_password"
            android:layout_below="@+id/profile_page_laboratory"
            android:layout_alignStart="@+id/profile_page_laboratory"
            android:background="@drawable/profile_item_selector"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="退出登录"
            android:layout_marginTop="15dp"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/ic_directions_walk_black_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="30dp"
            android:textColor="#111111"
            android:id="@+id/profile_page_logout"
            android:background="@drawable/profile_item_selector"
            android:layout_below="@+id/profile_page_feedback"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于作者"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/ic_face_black_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="30dp"
            android:textColor="#111111"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:id="@+id/profile_page_about_me"
            android:layout_below="@+id/profile_page_change_password"
            android:layout_alignStart="@+id/profile_page_change_password"
            android:background="@drawable/profile_item_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交反馈"
            android:paddingStart="30dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_feedback_black_36dp"
            android:gravity="center_vertical"
            android:drawablePadding="30dp"
            android:textColor="#111111"
            android:textSize="16sp"
            android:id="@+id/profile_page_feedback"
            android:background="@drawable/profile_item_selector"
            android:layout_below="@+id/profile_page_about_me"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>