<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#111111">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_page_user_layout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/splash1"
            android:id="@+id/main_page_user_image"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_page_user_name"
            android:text="暴走的赵日天"
            android:layout_gravity="center_vertical"
            android:textSize="23sp"
            android:singleLine="true"
            android:maxLength="6"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_add_selector"
            android:id="@+id/main_page_add_goal"
            android:layout_gravity="center_vertical"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_add_selector"
            android:layout_gravity="center_vertical"
            android:id="@+id/main_page_note"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignTop="@+id/main_page_add_goal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp" />
    </RelativeLayout>


</LinearLayout>