<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sakura"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:id="@+id/goal_page_list_item_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="will"
                android:textSize="18sp"
                android:textColor="#333333"
                android:id="@+id/goal_page_list_item_name"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/goal_page_list_item_image"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-1-1 11:40"
                android:layout_below="@+id/goal_page_list_item_name"
                android:layout_alignStart="@+id/goal_page_list_item_name"
                android:layout_marginTop="5dp"
                android:id="@+id/goal_page_list_item_time" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_more_selector"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/goal_page_list_item_more"
                android:layout_marginEnd="7dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:id="@+id/goal_page_content_image"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="的进口量法焦点科技进口量的副书记浮空连束带结发流口水的解放路快圣诞节弗兰克束带结发"
            android:textSize="16sp"
            android:textColor="#333333"
            android:id="@+id/goal_page_list_item_content"
            android:layout_margin="15dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>