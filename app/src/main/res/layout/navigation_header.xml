<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/profile_bg">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/anonymous"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/navigation_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/light_white"
        android:textSize="18sp"
        android:layout_below="@+id/navigation_header_avatar"
        android:layout_alignStart="@+id/navigation_header_avatar"
        android:layout_alignEnd="@+id/navigation_header_avatar"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
</RelativeLayout>